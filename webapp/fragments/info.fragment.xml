<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m"
                         xmlns:f="sap.ui.layout.form" >

                <f:SimpleForm >
                    <Label text="Description" />
                    <Text text="{DESCRIPTION}" />
                    <Label text="Category" />
                    <Text text="{CATEGORY}" />
                    <Label text="Supplier Name" />
                    <Text text="{SUPPLIER_NAME}" />
                    <Label text="Cost" />
                    <Text text="{PRICE} {CURRENCY_CODE}" />
                </f:SimpleForm>

                <f:SimpleForm title="Supplier Data" >
                    <Label text="Company Name" />
                    <Text text="{To_Supplier/COMPANY_NAME}" />
                    <Label text="WebSite" />
                    <Text text="{To_Supplier/WEB_ADDRESS}" />
                    <Label text="Email" />
                    <Text text="{To_Supplier/EMAIL_ADDRESS}" />
                    <Label text="Location" />
                    <Text text="{To_Supplier/CITY}" />
                </f:SimpleForm>

</core:FragmentDefinition>